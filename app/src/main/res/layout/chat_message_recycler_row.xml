<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <!--    receiver message layout-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/receive_message_layout"
        android:id="@+id/left_chat_layout"
        android:layout_marginEnd="80dp"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/left_chat_text_view"
            android:textSize="15sp"
            android:paddingHorizontal="10dp"
            android:textColor="@color/receive_message_text_color">

        </TextView>
    </LinearLayout>

<!--    sender message layout-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/send_message_layout"
        android:id="@+id/right_chat_layout"
        android:layout_marginStart="80dp"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/right_chat_text_view"
            android:textSize="15sp"
            android:paddingHorizontal="10dp"
            android:textColor="@color/send_message_text_color">

        </TextView>
    </LinearLayout>

</RelativeLayout>