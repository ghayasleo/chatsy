<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/off_white"
    tools:context=".ChatActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/off_white"
        android:paddingVertical="5dp"
        android:id="@+id/tool_bar_searchUser">

        <ImageButton
            android:id="@+id/back_btn_chat"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/back_btn"
            app:tint="@color/primary_color">

        </ImageButton>

        <include
            android:id="@+id/profile_pic_layout"
            layout="@layout/profile_pic_view"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/back_btn_chat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/profile_pic_layout"
            android:textSize="20dp"
            android:layout_marginStart="14dp"
            android:layout_centerVertical="true"
            android:id="@+id/other_username"
            android:background="?attr/selectableItemBackgroundBorderless">

        </TextView>

    </RelativeLayout>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divider"
        android:layout_above="@id/recycler_view_chatting">

    </com.google.android.material.divider.MaterialDivider>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:id="@+id/recycler_view_chatting"
        android:layout_above="@id/bottom_layout"
        android:layout_below="@id/tool_bar_searchUser"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/bottom_layout"
        android:padding="8dp"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <EditText
            android:id="@+id/send_message_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@+id/send_message_btn"
            android:background="@drawable/edit_text_round_rectangle"
            android:hint="@string/send_message"
            android:paddingHorizontal="20dp"
            android:textSize="15sp"
            android:paddingVertical="12dp">

        </EditText>
        <ImageButton
            android:id="@+id/send_message_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/sendbtn_icon"
            app:tint="@color/primary_color">

        </ImageButton>

    </RelativeLayout>

</RelativeLayout>